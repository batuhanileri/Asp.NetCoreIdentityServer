@model Asp.NetCoreIdentityServer.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "Success")
        {
            <div class="alert alert-info">Şifreniz Başarıyla Yenilenmiştir. Giriş Sayfasından Yeni Şifreniz İle Giriş Yapabilirsiniz.</div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş İçin Tıklayınız.</a>
        }

        else
        {

            <h4>Şifre Yenileme Alanı</h4>
            <hr />

            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur." class="btn btn-primary" />
                </div>
            </form>

        }

    </div>
</div>