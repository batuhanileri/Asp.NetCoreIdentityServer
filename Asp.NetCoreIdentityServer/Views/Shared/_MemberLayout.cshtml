<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    @*DataAnnotations için*@

    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="btn btn-info" style="margin-right:50px;" asp-action="Index" asp-controller="Member">Üye Ana Sayfa </a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Admin Ana Sayfa </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>

                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <br />
                <br />
                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme</a>
                <br />
                <br />
                <a class="btn btn-info btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
                <br />
                <br />
                <a class="btn btn-danger btn-block" asp-action="CityClaimsBursa" asp-controller="Member">Bursa Sayfa </a>
                <br />
                <br />
                <a class="btn btn-danger btn-block" asp-action="BirthDayClaims" asp-controller="Member">Yaş Sınırlamalı Sayfa </a>
                <br />
                <br />
                <a class="btn btn-danger btn-block" asp-action="ExchangeRedirect" asp-controller="Member">Borsa Bilgileri </a>
                <br />
                <br />
                <a class="btn btn-danger btn-block" asp-action="TwoFactorAuth" asp-controller="Member">İki Adımlı Kimlik Doğrulama </a>
                <br />
                <br />
            </div>
        </div>
    </div>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/qrcode/qrcode.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
